<h1>Transactions#index</h1>

<table>
  <thead>
  <tr>
    <% Transaction.attribute_names.each do |attribute| %>
      <th scope="col"><%= attribute.humanize %></th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% @transactions.each do |transaction| %>
    <tr>
      <% transaction.attributes.each do |attribute| %>
        <% if attribute[0] == 'uuid' %>
          <td><%= link_to attribute[1], transaction %></td>
        <% else %>
          <td><%= attribute[1] %></td>
        <% end %>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
